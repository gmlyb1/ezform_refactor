<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.testform.mapper.mem_Mapper">

	<resultMap id="empWithWorkMap" type="EZ_empVO">
    <id property="em_id" column="em_id"/>
    <result property="em_email" column="em_email"/>
    <result property="em_pw" column="em_pw"/>
    <result property="em_name" column="em_name"/>
    <result property="em_dept" column="em_dept"/>
    <result property="em_posi" column="em_posi"/>
    <result property="em_regdate" column="em_regdate"/>
    <result property="em_extension" column="em_extension"/>
    <result property="em_image" column="em_image"/>
    <!-- Nested mapping for EZ_workVO -->
    <association property="ez_workVO" javaType="EZ_workVO">
        <result property="work_regdate" column="work_regdate"/>
        <result property="work_status" column="work_status"/>
    </association>
</resultMap>

	<!-- 직원아이디 생성 -->
	<!-- 
	<select id="count" resultType="int">
		select count(*)
		from ez_em
	</select>
	 -->
	 
	<!-- 사원ID 중복체크 --> 
	<select id="checkID" resultType="EZ_empVO">
		select * from ez_em
		where em_id = #{em_id}
	</select> 
	
	<!-- 로그인 : ID 존재여부 -->
	<select id ="loginIncludeID" resultType="EZ_empVO">
		select * from ez_em
		where em_email = #{em_email}
	</select>
	
	<!-- 로그인 확인 -->
	<select id ="loginEmp" resultType="EZ_empVO">
		select * from ez_em
		where em_email = #{em_email} and em_pw = #{em_pw}
	</select>
	
	<!-- 회원정보 -->
	<select id ="infoEmp" resultType="EZ_empVO">
		select * from ez_em
		where em_id = #{em_id}
	</select>
	
	<!-- 회원리스트 -->
	<select id ="listEmp" resultType="EZ_empVO">
		select * from ez_em
		where em_id != 9999
	</select>
	
	<select id="messageMemberList" parameterType="EZ_empVO" resultType="EZ_empVO">
		select 
			 em_id 
			,em_email
			,em_pw
			,em_name
			,em_dept
			,em_posi
			,em_regdate
			,em_extension
			,em_image
		from ez_em
	</select>
	
	<select id="memAndStatusList" resultMap="empWithWorkMap">
		 select 
	       em.*,
	       ew.work_regdate as work_regdate,
	       ew.work_status as work_status 
	    from ez_em em
	    left join (
	        select 
	            ew1.em_id
	            ,ew1.user_email
	            ,MAX(ew1.work_regdate) AS work_regdate
           		,SUBSTRING_INDEX(GROUP_CONCAT(ew1.work_status ORDER BY ew1.work_regdate DESC), ',', 1) AS work_status
	        from ez_work ew1
	        where date(ew1.work_regdate) = curdate()
	        group by ew1.em_id, ew1.user_email
	    ) ew 
	    on em.em_id = ew.em_id 
	    and em.em_email = ew.user_email
	    where em.em_id != 9999
	</select>
	
	<!-- 회원가입 --> 
	<insert id="joinEmp">
		insert into ez_em (em_id,em_email,em_pw,em_name,em_dept,em_posi,em_regdate,em_extension,em_image) 
		values (#{em_id},#{em_email},#{em_pw},#{em_name},#{em_dept},#{em_posi},now(),#{em_extension},#{em_image})
	</insert>

	<!-- 회원 수정 -->
	<update id="updateEmp">
		update ez_em set em_name=#{em_name},em_dept=#{em_dept},em_posi=#{em_posi},em_extension=#{em_extension},em_regdate=now(),em_image=#{em_image}
	    where em_id=#{em_id} and em_pw=#{em_pw}
	</update>
	
	<!-- 회원탈퇴 -->
	<delete id="deleteEmp">
		delete from ez_em
		where em_id = #{em_id} and em_pw = #{em_pw}
	</delete>

</mapper>
