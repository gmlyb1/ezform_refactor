<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ezform.mapper.message_Mapper">

	<select id="countMessageView" resultType="String">
		select count(*) from tb_message
		where receiver_name = #{receiver_name} and gubun = 0	
	</select>
	
	<select id="findList" resultType="EZ_messageVO">
		select * from ez_message where receiver_name = #{receiver_name} and gubun = 0
	</select>
	
	<insert id="insertMessage">
		INSERT INTO ez_message
		(
			 ms_title
			,receiver_name
			,gubun
			,create_date
			,ms_content
			,sender_name
			,user_id
			,read_yn
		)
		values
		(
			 #{ms_title}
			,#{receiver_name}
			,#{gubun}
			,NOW()
			,#{ms_content}
			,#{sender_name}
			,#{user_id}
			,#{read_yn}
		)
	</insert>
	
</mapper>
