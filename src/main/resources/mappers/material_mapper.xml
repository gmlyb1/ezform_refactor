<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ezform.mapper.material_Mapper">

	<select id="selectBoardList" parameterType="EZ_materialVO" resultType="EZ_materialVO">
		select 
			 ma_seq 
			,ma_dept
			,ma_userId
			,ma_title
			,ma_content
			,ma_file
			,ma_regdate
		from ez_material
	</select>
	
	<select id="read" resultType="EZ_materialVO">
		select 
			 ma_seq 
			,ma_dept
			,ma_userId
			,ma_title
			,ma_content
			,ma_file
			,ma_regdate
		from ez_material 
		where ma_seq = #{ma_seq}
	</select>	
	
	<insert id="insertBoard">
		insert into ez_material
		(
			 ma_seq 
			,ma_dept
			,ma_userId
			,ma_title
			,ma_content
			,ma_file
			,ma_regdate
		)
		values
		(
			 #{ma_seq}
			,#{ma_dept}
			,#{ma_userId}
			,#{ma_title}
			,#{ma_content}
			,#{ma_file}
			,NOW()
		)
	</insert>
	
	<update id="modify">
		update ez_material set
		   ma_title   = #{ma_title}
		  ,ma_content = #{ma_content} 
		  ,ma_file    = #{ma_file}
		 where ma_seq = #{ma_seq}
	</update>
	
	<delete id="delete">
		delete from ez_material 
		where ma_seq = #{ma_seq} 
	</delete>
	
	
	
</mapper>
